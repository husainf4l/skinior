{
  "apps": [
    {
      "name": "skinior-backend",
      "script": "dist/main.js",
      "instances": 1,
      "exec_mode": "cluster",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": 4008
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 4008
      },
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_file": "./logs/combined.log",
      "time": true
    }
  ]
}
